<%= form_with(model: meeting, local: true, class: "meeting-form") do |form| %>
  <% if meeting.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Errors</h4>
      <ul>
        <% meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <br>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter meeting name" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :date, class: "form-label" %>
    <br>
    <%= form.date_field :date, class: "form-control", placeholder: "Select meeting date" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :time, class: "form-label" %>
    <br>
    <%= form.time_field :time, class: "form-control", placeholder: "Select meeting time" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :location, class: "form-label" %>
    <br>
    <%= form.text_field :location, class: "form-control", placeholder: "Enter meeting location" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <br>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter meeting description" %>
  </div>
  <br>

  <div class="text-center mt-4">
    <%= form.submit "Save Meeting", class: "btn btn-primary btn-lg mr-3" %>
  </div>
<% end %>
